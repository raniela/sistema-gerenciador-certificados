</div>

<script>
    $(function(){                                             
        $('#divResAluno').load('<?php echo $this->baseUrl('admin/aluno/grid'); ?>');
        $('#btBuscarAluno').click(function(){            
            tx_nome_aluno = urlencodeGet($('#aluno-tx_nome_aluno').val());            
            tx_cpf = urlencodeGet($('#aluno-tx_cpf').val());                        
            
            $('#divResAluno').load('<?php echo $this->baseUrl('admin/aluno/grid'); ?>'+'/tx_nome_aluno/' + tx_nome_aluno + '/tx_cpf/' + tx_cpf);
        });
        
        //Carrega formulario de novo aluno com jquery
        $('#novo_aluno').click(function(){
            window.location = '/admin/aluno/form';
        });
    }); 
    
</script>